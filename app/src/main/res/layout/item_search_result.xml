<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageViewSearchIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_search_black_24dp"
        android:alpha="0.7" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSearchTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Result Title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSearchSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search result subtitle or description"
            android:textSize="12sp"
            android:alpha="0.7" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewSearchType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book"
        android:textSize="10sp"
        android:background="@drawable/rounded_background"
        android:padding="4dp"
        android:alpha="0.8" />

</LinearLayout>
